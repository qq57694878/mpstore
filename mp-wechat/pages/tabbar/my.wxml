            {{userMobile}}
          </wxc-label>
          <button wx:else class="pin-phoneNumber" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" size='min'>
            点击绑定手机号码
          </button>-->
      </view>

    </view>
